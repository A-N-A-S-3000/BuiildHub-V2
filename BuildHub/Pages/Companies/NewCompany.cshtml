@page
@model NewCompanyModel
@{
    ViewData["Title"] = "New Company";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>New Company</h2>
<form method="post" class="card p-3" styling="padding: 1.5rem" >
    <div class="mb-2">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Tier</label>
        <select asp-for="Tier" class="form-select" >
        <option value="excellent" >
        excellent
        </option>
        <option value="good" >
        good
        </option>
        <option value="standard" >
        standard
        </option>
        </select>
    </div>

    <div style="display: grid; row-gap: 3">
    <button class="btn btn-primary">Save</button>
    <a asp-page="/Companies/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
