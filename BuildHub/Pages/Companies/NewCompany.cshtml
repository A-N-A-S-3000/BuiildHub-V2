@page
@model NewCompanyModel
@{
    ViewData["Title"] = "New Company";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>New Company</h2>
<form method="post" class="card p-3">
    <div class="mb-2">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Tier (excellent|good|standard)</label>
        <input asp-for="Tier" class="form-control" />
    </div>
    <button class="btn btn-primary">Save</button>
    <a asp-page="/Companies/Index" class="btn btn-secondary">Cancel</a>
</form>
