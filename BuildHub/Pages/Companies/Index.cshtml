@page
@model CompaniesIndexModel
@{
    ViewData["Title"] = "Companies";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>Companies</h2>
@await Html.PartialAsync("_Flash")

<p>
    <a class="btn btn-primary" asp-page="/Companies/NewCompany">+ New Company</a>
    <a class="btn btn-outline-primary" asp-page="/Companies/NewCompanyProject">+ New Company Project</a>
</p>

<table class="table table-striped">
    <thead><tr><th>Id</th><th>Name</th><th>Tier</th><th>Past Projects</th></tr></thead>
    <tbody>
        @foreach (var c in Model.Companies)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Tier</td>
                <td>
                    @(c.PastProjects?.Count ?? 0)
                    <a class="btn btn-sm btn-outline-primary ms-2"
                       asp-page="/Companies/Projects"
                       asp-route-companyId="@c.Id">View</a>
                </td>

            </tr>
        }
    </tbody>
</table>
