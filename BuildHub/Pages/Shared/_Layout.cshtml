<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BuildHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">BuildHub</a>
            <div class="navbar-nav">
                <a class="nav-link" asp-page="/Projects/Index">Projects</a>
                <a class="nav-link" asp-page="/Companies/Index">Companies</a>
                <a class="nav-link" asp-page="/Requests/Open">Open Request</a>
            </div>
        </div>
    </nav>
    <main class="container py-4">
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
