@page
@model OpenModel
@{
    ViewData["Title"] = "Open Request";
    Layout = "/Pages/Shared/_Layout.cshtml";
}
<h2>Open Broker Request</h2>
@await Html.PartialAsync("_Flash")

<form method="post" class="card p-3">
    <div class="mb-2">
        <label class="form-label">Project Public Id</label>
        <input asp-for="ProjectPublicId" type="number" class="form-control" />
    </div>
    <div class="mb-2">
        <label class="form-label">Tier Filter</label>
        <select asp-for="TierFilter" class="form-select" >
        <option value="excellent" >
        excellent
        </option>
        <option value="good" >
        good
        </option>
        <option value="standard" >
        standard
        </option>
        </select>
    </div>
    <div class="form-check mb-3">
        <input asp-for="HasPlans" class="form-check-input" />
        <label class="form-check-label">Has Plans</label>
    </div>
    <button class="btn btn-primary">Open</button>
</form>
